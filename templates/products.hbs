<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3">
      <h3>Product Name</h3>
      <ul>
        {{#each products}}
          <li>{{name}}</li>
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-3">
      <h3>Department</h3>
      <ul>
        {{#each products}}
          <li>{{ department }}</li>
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-3">
      <h3>Price</h3>
      <ul id='prices'>
        {{#each products}}
          <li>{{ price }}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
